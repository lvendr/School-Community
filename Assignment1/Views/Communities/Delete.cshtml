@model Lab4.Models.ViewModels.DeleteCommunityViewModel

@{ ViewData["Title"] = "Delete"; }

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Community</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Community.Title)
        </dd>
        <dt class="col-sm-2">
            Budget
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Community.Budget)
        </dd>
    </dl>
    @if (Model.Advertisement == null)
    {
        <form asp-action="Delete">
            <input type="hidden" asp-for="@Model.Community.ID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form> }
     else
    {
        <p>You cannot delete a community until all associated advertisements are deleted!</p>
        <a asp-action="Index">Back to List</a>
    }
</div>
