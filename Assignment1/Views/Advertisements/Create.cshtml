@model Lab4.Models.ViewModels.AdsViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Upload</h1>

<h4>Upload an advertisement for community @Model.Community.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create" method="post">
            <div class="form-group">
                <div class="btn btn-sm float-left">
                    <input name="ads" type="file">
                    <input type="hidden" name="communityID" value="@Model.Community.ID" />
                    <input type="hidden" name="communityTitle" value="@Model.Community.Title" />
                </div>
            </div>
            <div class="form-group">
                <button name="upload" class="btn btn-primary">Upload Now</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Advertisements" asp-route-id="@Model.Community.ID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
